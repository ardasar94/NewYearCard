@model Card
@{
    ViewBag.Title = "Add Card";
}

<div class="text-center">
    <h2 class="logo">Create New Card</h2>
    <img width="300" src="@Url.Content($"~/images/{@ViewBag.PhotoPath}.png")" />
</div>


@using (Html.BeginForm("New", "Cards", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.PhotoPath, new { value = $"{ViewBag.ResimAd}" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.SenderName, "From :")
                @Html.TextBoxFor(m => m.SenderName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SenderName)

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ReciverName, "To :")
                @Html.TextBoxFor(m => m.ReciverName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReciverName)

            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, "Message :")
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Message)

    </div>

    <button style="margin-left: 46%" type="submit" class="btn btn-danger btn-lg">Save</button>


}
